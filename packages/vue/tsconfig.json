{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./es",
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

